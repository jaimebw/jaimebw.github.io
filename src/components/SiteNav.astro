---
interface Props {
  currentPath?: string;
}

const navItems = [
  { href: "/", label: "Home" },
  { href: "/projects", label: "Projects" },
  { href: "/publications", label: "Publications" },
  { href: "/aboutme", label: "About" },
  { href: "/tags", label: "Tags" },
];

const currentPath = Astro.props.currentPath ?? "/";

const isActive = (href: string) =>
  href === "/"
    ? currentPath === href
    : currentPath === href || currentPath.startsWith(`${href}/`);
---
<nav class="site-nav">
  <a href="/" aria-label="Jaime home link">
    <strong>Jaime Bowen</strong>
  </a>
  <ul>
    {navItems.map((item) => (
      <li>
        <a
          href={item.href}
          aria-current={isActive(item.href) ? "page" : undefined}
        >
          {item.label}
        </a>
      </li>
    ))}
  </ul>
</nav>
