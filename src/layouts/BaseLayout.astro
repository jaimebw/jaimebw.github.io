---
import SiteNav from "../components/SiteNav.astro";
import GoogleAnalytics from "../components/GoogleAnalytics.astro";
import "../styles/global.css";
import "katex/dist/katex.min.css";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const { title, description, ogImage } = Astro.props;
const baseTitle = "Jaime Bowen Varela";
const pageTitle = title ? `${title} Â· ${baseTitle}` : baseTitle;
const metaDescription =
  description ??
  "Aero-software engineer writing about avionics, tooling, and random obsessions.";
const canonicalUrl = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).toString()
  : Astro.url.href;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    <meta name="description" content={metaDescription} />
    <link rel="icon" href="/assets/img/jaime_bird.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500;600&family=JetBrains+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <link rel="canonical" href={canonicalUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={metaDescription} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <GoogleAnalytics />
  </head>
  <body>
    <main>
      <div class="page-frame">
        <article class="content-card">
          <SiteNav currentPath={Astro.url.pathname} />
          <slot />
        </article>
        <footer class="site-footer">
          <nav>
            <a href="https://github.com/jaimebw" target="_blank" rel="noreferrer">github</a>
            <a href="https://x.com/jaimebw" target="_blank" rel="noreferrer">x</a>
            <a
              href="https://www.linkedin.com/in/jaimebw"
              target="_blank"
              rel="noreferrer"
              >linkedin</a
            >
            <a
              href="https://scholar.google.com/citations?user=SIFn5O8AAAAJ&hl=es"
              target="_blank"
              rel="noreferrer"
              >scholar</a
            >
          </nav>
          <span>&copy; {new Date().getFullYear()} Jaime Bowen Varela.</span>
        </footer>
      </div>
    </main>
  </body>
</html>
